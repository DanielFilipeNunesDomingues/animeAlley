@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar";
}
<div class="min-vh-100">
    <div class="row container pt-5 m-auto">
        <div class="col-lg-6 navbar-animeAlley-bg m-auto p-4 form-card" style="border-radius: 0.4rem;">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                <h1 class="mb-5 text-center">Registar</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.Utilizador.Nome" class="form-control" autocomplete="username" aria-required="true" placeholder="Nome" />
                    <label asp-for="Input.Utilizador.Nome"></label>
                    <span asp-validation-for="Input.Utilizador.Nome" class="text-danger"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword">Confirmar Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Campo para foto de perfil -->
                <div class="mb-4">
                    <label asp-for="Input.FotoUtilizador" class="form-label">Foto de Perfil (opcional)</label>
                    <input asp-for="Input.FotoUtilizador" class="form-control" type="file" accept="image/jpeg,image/png" />
                    <span asp-validation-for="Input.FotoUtilizador" class="text-danger"></span>
                    <div class="form-text">Formatos aceites: JPEG, PNG. Se não enviar, será usado um avatar padrão.</div>
                </div>

                <!-- Campo para código de administrador -->
                <div class="form-floating mb-4">
                    <input asp-for="Input.CodigoAdmin" class="form-control" placeholder="Código de Administrador" />
                    <label asp-for="Input.CodigoAdmin">Código de Administrador (opcional)</label>
                    <span asp-validation-for="Input.CodigoAdmin" class="text-danger"></span>
                    <div class="form-text">Deixe em branco se não for administrador.</div>
                </div>

                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registar</button>

                <div class="mt-5 mb-3">
                    <a asp-area="Identity" asp-page="/Account/Login" class="info-help">Já possui uma conta? <span>Entre agora!</span></a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}