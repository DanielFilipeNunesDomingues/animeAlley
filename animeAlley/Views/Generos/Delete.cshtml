@model animeAlley.Models.Genero
@{
    ViewData["Title"] = "Excluir " + Model.GeneroNome;
}

<div class="container min-vh-100 py-5">
    <h2 class="text-center mb-4">Excluir Gênero</h2>

    <div class="row justify-content-center mt-4">
        <div class="col-12 col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Tem certeza que deseja excluir este gênero?</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <strong>Atenção:</strong> Esta ação não pode ser desfeita.
                    </div>

                    <div class="table-container">
                        <table class="table table-borderless">
                            <tbody>
                                <tr>
                                    <td class="fw-semibold col-sm-3">
                                        @Html.DisplayNameFor(model => model.GeneroNome):
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.GeneroNome)
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-semibold">
                                        Shows Associados:
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">
                                            @(Model.Shows?.Count() ?? 0) show@(Model.Shows?.Count() != 1 ? "s" : "")
                                        </span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    @if (Model.Shows != null && Model.Shows.Any())
                    {
                        <div class="alert alert-info mt-3" role="alert">
                            <strong>Nota:</strong> Este gênero está associado a @Model.Shows.Count() show@(Model.Shows.Count() != 1 ? "s" : "").
                            A exclusão removerá a associação com estes shows.
                        </div>
                    }
                </div>
            </div>

            <div class="d-flex justify-content-center gap-3 mt-4">
                <form asp-action="Delete" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-lg">
                        Confirmar Exclusão
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    Cancelar
                </a>
            </div>
        </div>
    </div>
</div>