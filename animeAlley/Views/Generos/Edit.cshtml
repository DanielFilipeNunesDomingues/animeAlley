@model animeAlley.Models.Genero

@{
    ViewData["Title"] = "Editar " + Model.GeneroNome;
}

<div class="py-5 container min-vh-100">
    <h1 class="text-center mb-4">Editar Gênero</h1>

    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                <input type="hidden" asp-for="Id" />
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Informações do Gênero</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="GeneroNome" class="form-label fw-semibold">Nome do Gênero <span class="text-danger d-inline-block">*</span></label>
                                    <input asp-for="GeneroNome" class="form-control" placeholder="Nome do gênero" />
                                    <span asp-validation-for="GeneroNome" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">
                        Editar Gênero
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                        Voltar à Lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            // Validação antes do submit
            $('form').on('submit', function(e) {
                const generoNome = $('#GeneroNome').val().trim();

                if (!generoNome) {
                    e.preventDefault();
                    alert('Por favor, informe o nome do gênero.');
                    $('#GeneroNome').focus();
                    return false;
                }
            });
        });
    </script>
}