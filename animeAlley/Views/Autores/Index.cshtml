@model IEnumerable<animeAlley.Models.Autor>

@{
    ViewData["Title"] = "Autores";
}

<div class="py-5 container min-vh-100">

    @if (User.IsInRole("Admin"))
    {
        <p>
            <a class="text-muted pointer-event" asp-action="Create">Create New</a>
        </p>
    }

    <form asp-action="Index" method="get" class="mb-4">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Buscar autores..." class="form-control" />
    </form>

    <div class="show-grid-container">
        @foreach (var item in Model)
        {
            <div class="show-grid-item">
                <a asp-action="Details" asp-route-id="@item.Id">
                    <img src="~/images/autoresFoto/@item.Foto" alt="@item.Nome" title="@item.Nome" height="100px" />
                </a>
            </div>
        }
    </div>
</div>