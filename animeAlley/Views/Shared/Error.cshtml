@model ErrorViewModel
@{
    ViewData["Title"] = Model.ErrorTitle ?? "Erro";
}

<div class="min-vh-100 d-flex align-items-center  py-5 flex-column">
    @if (Model.StatusCode == 404)
    {
        <h1 class="fs-1 fw-bold text-danger">404 <img src="~/img/iconAnimeAlley.svg" alt="Alternate Text" /></h1>
        <h2 class="mb-3">Oops! Página não encontrada</h2>
        <p class="lead text-muted mb-4">
            A página que você está procurando não existe ou foi movida.
        </p>
    }
    else if (Model.StatusCode == 403)
    {
        <h1 class="fs-1 fw-bold text-danger">403 <img src="~/img/iconAnimeAlley.svg" alt="Alternate Text" /></h1>
        <h2 class="mb-3">Acesso Negado</h2>
        <p class="lead text-muted mb-4">
            Você não tem permissão para acessar esta página.
        </p>
    }
    else
    {
        <h1 class="fs-1 fw-bold text-danger">@Model.StatusCode <img src="~/img/iconAnimeAlley.svg" alt="Alternate Text" /></h1>
        <h2 class="mb-3">@Model.ErrorTitle</h2>
        <p class="lead text-muted mb-4">
            @Model.ErrorMessage
        </p>
    }

    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
        <a href="/" class="btn btn-primary btn-lg me-md-2">
            Voltar ao Início
        </a>
        <button onclick="history.back()" class="btn btn-outline-secondary btn-lg">
            Página Anterior
        </button>
    </div>

    @if (Model.ShowRequestId)
    {
        <div class="mt-4">
            <small class="text-muted">
                ID da Requisição: @Model.RequestId
            </small>
        </div>
    }
</div>

@section Scripts {
    <script>
        console.log('Erro @Model.StatusCode na URL:', window.location.href);
    </script>
}